<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow >

            <TextView
                android:id="@+id/txtListNum"
                android:layout_width="19sp"
                android:layout_height="25sp"
                android:gravity="center_horizontal"
                android:text="10"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/txtListTeams"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:text="Ливерпуль"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtListGames"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:text="25"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtListWin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:text="21"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtListDraw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:text="3"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtListLoss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:text="2"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtListGoals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="35"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtListPoints"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="78"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>